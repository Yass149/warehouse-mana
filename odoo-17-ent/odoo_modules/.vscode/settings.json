{
  // Specifies terminal settings for Linux
  "terminal.integrated.profiles.linux": {
    // Profile for a login shell using Bash
    "bash-login": {
      "path": "/bin/bash", // Path to Bash executable
      "args": ["-l"] // Additional arguments for Bash to start as a login shell
    }
  },

  // Specifies the default terminal profile for Linux
  "terminal.integrated.defaultProfile.linux": "bash",

  // Specifies the automation shell for Linux
  "terminal.integrated.automationShell.linux": "/bin/bash",

  // Specifies the default Python interpreter path
  "python.defaultInterpreterPath": "/usr/bin/python3"
}
